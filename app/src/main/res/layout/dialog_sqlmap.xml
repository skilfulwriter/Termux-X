<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sqlmap 自动化注入工具"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- 目标设置 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#333333"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="目标 URL (-u)"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/editTextUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_line_new_liang"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:hint="http://example.com/id=1"
                    android:textColorHint="#555555"
                    android:inputType="textUri" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="POST 数据 (--data) [可选]"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/editTextData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/shape_line_new_liang"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:hint="id=1&amp;name=test"
                    android:textColorHint="#555555"
                    android:inputType="text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cookie (--cookie) [可选]"
                    android:textColor="#AAAAAA"
                    android:textSize="12sp"/>
                <EditText
                    android:id="@+id/editTextCookie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_line_new_liang"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:hint="PHPSESSID=..."
                    android:textColorHint="#555555"
                    android:inputType="text" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 常用选项 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="#333333"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="常用选项"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <CheckBox
                    android:id="@+id/checkBoxWizard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="向导模式 (--wizard)"
                    android:textColor="#FFFFFF"
                    android:buttonTint="#4CAF50" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="勾选向导模式将忽略下方大部分设置"
                    android:textColor="#AAAAAA"
                    android:textSize="10sp"
                    android:layout_marginStart="32dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/layoutOptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkBoxBatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="自动确认 (--batch)"
                        android:textColor="#FFFFFF"
                        android:checked="true"
                        android:buttonTint="#2196F3" />

                    <CheckBox
                        android:id="@+id/checkBoxRandomAgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="随机 User-Agent (--random-agent)"
                        android:textColor="#FFFFFF"
                        android:checked="true"
                        android:buttonTint="#2196F3" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#444444"
                        android:layout_marginVertical="8dp"/>

                    <CheckBox
                        android:id="@+id/checkBoxDbs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="获取数据库 (--dbs)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFC107" />

                    <CheckBox
                        android:id="@+id/checkBoxTables"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="获取表 (--tables)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFC107" />

                    <CheckBox
                        android:id="@+id/checkBoxColumns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="获取列 (--columns)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FFC107" />

                    <CheckBox
                        android:id="@+id/checkBoxDump"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="导出数据 (--dump)"
                        android:textColor="#FFFFFF"
                        android:buttonTint="#FF5722" />
                    
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#444444"
                        android:layout_marginVertical="8dp"/>
                        
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">
                        
                        <!-- Level -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Level (1-5): "
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"/>
                            <EditText
                                android:id="@+id/editTextLevel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_line_new_liang"
                                android:padding="4dp"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:inputType="number"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="8dp"/>
                        </LinearLayout>
                            
                        <!-- Risk -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Risk (1-3): "
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"/>
                            <EditText
                                android:id="@+id/editTextRisk"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="@drawable/shape_line_new_liang"
                                android:padding="4dp"
                                android:gravity="center"
                                android:text="1"
                                android:textColor="#FFFFFF"
                                android:inputType="number"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 控制按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="启动"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停止"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:enabled="false"
                android:alpha="0.5" />

        </LinearLayout>
        
        <TextView
            android:id="@+id/stopHintText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请先启动任务才能停止"
            android:textSize="14sp"
            android:textColor="#AAAAAA"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="visible" />

    </LinearLayout>
</ScrollView>
