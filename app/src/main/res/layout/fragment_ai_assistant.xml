<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- API Configuration Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_config_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/ai_api_url_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApiUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textUri"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:hint="@string/ai_model_name_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etModelName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"/>
                </com.google.android.material.textfield.TextInputLayout>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">
                    
                    <Button
                        android:id="@+id/btnPresetOpenAI"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ai_preset_openai"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="4dp"/>
                        
                    <Button
                        android:id="@+id/btnPresetDeepSeek"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/ai_preset_deepseek"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ai_api_key_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etApiKey"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnSaveApiKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_save_key"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Features Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_features_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnCodeAudit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_code_audit"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPayloadGen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_payload_gen"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnPhishing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_phishing"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>
            
        <Button
            android:id="@+id/btnSmartDict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_smart_dict"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnWafBypass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_waf_bypass"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>
            
        <Button
            android:id="@+id/btnTrafficDetection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_traffic_detection"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnCommandHelper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_command_helper"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>
            
        <Button
            android:id="@+id/btnLogAnalysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ai_btn_log_analysis"
            android:drawableStart="@drawable/ic_settings"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>