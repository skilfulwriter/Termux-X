<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ai_cmd_helper_desc"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/etCommandInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ai_cmd_helper_input_hint"
        android:minLines="2"
        android:inputType="textMultiLine"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ai_cmd_helper_btn_generate"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ai_cmd_helper_output_label"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/tvCommandOutput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="#EEEEEE"
        android:textColor="#000000"
        android:textColorHint="#757575"
        android:fontFamily="monospace"
        android:hint="@string/ai_cmd_helper_output_hint"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnRunTermux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在Termux终端运行"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnRunKali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="在Kali终端运行(需要先安装kali Nethunter)"
        android:visibility="gone"/>

</LinearLayout>